<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="375dp"
        android:layout_height="56dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/ibm_plex_mono"
        android:padding="@dimen/padding"
        android:text="@string/introMsg"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onSurface"
        android:textColorLink="@color/md_theme_dark_inversePrimary"
        android:textSize="@dimen/inputFontSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="260dp"
        android:fontFamily="@font/ibm_plex_mono"
        android:hint="@string/calcResults"
        android:padding="0dp"
        android:textColor="@color/md_theme_dark_primary"
        android:textColorHint="@color/md_theme_dark_onBackground"
        android:textSize="@dimen/inputFontSize"
        app:barrierMargin="@dimen/resultMargins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/firstNumber"
        android:layout_width="137dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:fontFamily="@font/ibm_plex_mono"
        android:hint="Number #1"
        android:inputType="text"
        android:padding="@dimen/padding"
        android:shadowColor="@color/md_theme_dark_onBackground"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onErrorContainer"
        android:textColorHint="@color/md_theme_dark_onBackground"
        android:textSize="@dimen/inputFontSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/secondNumber"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:fontFamily="@font/ibm_plex_mono"
        android:hint="Number #2"
        android:inputType="text"
        android:padding="@dimen/padding"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onErrorContainer"
        android:textColorHint="@color/md_theme_dark_onBackground"
        android:textSize="@dimen/inputFontSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/md_theme_dark_onBackground"
        android:fontFamily="@font/ibm_plex_mono"
        android:shadowColor="@color/md_theme_dark_onBackground"
        android:text="Calculate"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/md_theme_dark_onBackground"
        android:textColorHint="@color/md_theme_dark_onBackground"
        android:textSize="@dimen/inputFontSize"
        app:barrierMargin="@dimen/buttonMargins"
        app:iconPadding="@dimen/padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787"
        app:rippleColor="@color/md_theme_dark_onBackground"
        app:strokeColor="@color/md_theme_dark_onBackground" />

    <Spinner
        android:id="@+id/dropDown"
        android:layout_width="119dp"
        android:layout_height="26dp"
        android:layout_marginTop="380dp"
        android:background="@color/md_theme_dark_inverseSurface"
        android:dropDownWidth="wrap_content"
        android:padding="0dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
